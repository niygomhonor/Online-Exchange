<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="226dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/screen1" />


    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:background="#7F978F"
        android:padding="20dp"
        android:text="Welcome to E-Swap!"
        android:textColor="#ffffff"
        android:textSize="33dp"
        android:textStyle="bold"
        app:fontFamily="@font/allura" />

    <TextView
        android:id="@+id/slogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome"
        android:background="#9FB3AC"
        android:paddingLeft="100dp"
        android:text="The Sale of Sales!"
        android:textColor="#180707"
        android:textSize="22dp"
        android:textStyle="bold"
        app:fontFamily="@font/aladin" />


    <Button
        android:id="@+id/ViewStore"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Upload"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginBottom="254dp"
        android:alpha="0.40"
        android:background="@drawable/curvey"
        android:text="View Store"
        android:textColor="#F10303" />

    <Button
        android:id="@+id/Upload"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="162dp"
        android:alpha="0.40"
        android:background="@drawable/curvey"
        android:text="upload"
        android:textColor="#F10303" />

    <Button
        android:id="@+id/User"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="75dp"
        android:alpha="0.40"
        android:background="@drawable/curvey"
        android:text="User Profile"
        android:textColor="#F10303" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/save" />






</androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>

